{
    "version": 2,
    "builds": [
      {
        "src": "api.py",
        "use": "@vercel/python"
      },
      {
        "src": "sticker-generator-frontend/build",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/generate-sticker",
        "dest": "/api.py"
      },
      {
        "src": "/Sticker_Generator/data/(.*)",
        "dest": "http://localhost:5000/Sticker_Generator/data/$1"
      },
      {
        "src": "/(.*)",
        "dest": "/sticker-generator-frontend/build/$1"
      }
    ],
    "env": {
      "FLASK_APP": "api.py"
    },
    "functions": {
      "api/*": {
        "includeFiles": "api.py"
      }
    }
  }
  